<% layout('./layouts/boilerplate')%>

<div class="row my-5">
  <h1 class="text-center">Post new course</h1>
  <div class="col-6 offset-3">
    <form
      action="/courses"
      method="POST"
      class="validated-form"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title </label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="course[title]"
          placeholder="Pebble Beach"
          required
        />
        <div class="invalid-feedback text-end">Please fill in the blank</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location </label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="course[location]"
          placeholder="Monterey County, California"
          required
        />
        <div class="invalid-feedback text-end">Please fill in the blank</div>
      </div>
      <input type="file" name="image" multiple />
      <!-- <div class="mb-3">
        <label class="form-label" for="image">Image</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="course[image]"
          placeholder="URL"
          required
        />
        <div class="invalid-feedback text-end">Please fill in the blank</div>
      </div> -->
      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            type="text"
            id="price"
            name="course[price]"
            placeholder="100.00"
            aria-label="price"
            aria-describedby="price-label"
            required
          />
          <div class="invalid-feedback text-end">Please fill in the blank</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="course[description]"
          rows="3"
          placeholder="Lorem ipsum dolor sit amet consectetur adipisicing elite..."
          required
        ></textarea>
        <div class="invalid-feedback text-end">Please fill in the blank</div>
      </div>

      <div class="text-end">
        <button class="btn btn-info">Add Course</button>
        <a class="btn btn-danger" href="/courses">Cancel</a>
      </div>
    </form>
  </div>
</div>
