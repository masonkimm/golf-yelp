<% layout('./layouts/boilerplate') %>

<div class="row">
  <div class="col-6">
    <div class="card my-4">
      <div class="card-footer d-flex align-items-end">
        <a href="/courses" class="card-link"> Back to all courses</a>
      </div>
      <img src="<%=course.image %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%=course.title %></h5>
        <p class="card-text text-muted"><%=course.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%=course.location %></li>
        <li class="list-group-item">$ <%=course.price %>.00 /round</li>

        <li class="list-group-item">
          <a href="#" class="card-link">Website</a>
        </li>
      </ul>
      <% if(currentUser && course.author.equals(currentUser._id)) { %>

      <div class="gap-2 p-3" style="margin-left: auto">
        <a
          class="btn btn-info"
          href="/courses/<%= course._id %>/edit"
          class="card-link"
          >Edit</a
        >

        <form
          class="card-link d-inline"
          action="/courses/<%= course._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger ml-2">Remove</button>
        </form>
      </div>
      <% } %>

      <div class="card-footer">
        <a class="text-muted"> Submitted by: <%=course.author.username %> </a>
      </div>
    </div>
  </div>
  <div class="col-6">
    <div class="review my-4">
      <h4>Leave a Review</h4>

      <form
        class="mb-4 validated-form"
        action="/courses/<%=course._id%>/reviews"
        method="POST"
        novalidate
      >
        <div class="mb-3">
          <label class="form-label" for="rating" id="rating">Rating</label>
          <input
            class="form-range"
            type="range"
            min="1"
            max="5"
            name="review[rating]"
            required
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="body">Review </label>
          <% if(currentUser){%>

          <textarea
            class="form-control"
            name="review[body]"
            id="body"
            cols="30"
            rows="3"
            required
            placeholder="Write a review"
          ></textarea>
          <% } else {%>
          <textarea
            class="form-control"
            name="review[body]"
            id="body"
            cols="30"
            rows="3"
            required
            placeholder="Please log in to write a review."
          ></textarea>
          <% } %>

          <div class="invalid-feedback text-end">Cannot be blank</div>
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
          <!-- <button class="btn btn-info">Submit</button> -->

          <% if(currentUser){%>
          <button class="btn btn-info">Submit</button>
          <% } %>
        </div>
      </form>

      <h4>Reviews</h4>
      <% for (let review of course.reviews) {%>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">author: <%= review.author.username%></h5>
          <p class="card-title">rating: <%= review.rating%></p>
          <p class="card-text">review: <%= review.body%></p>
        </div>

        <div class="d-grid d-flex justify-content-end">
          <% if( currentUser && review.author.equals(currentUser._id)) {%>

          <form
            class="card-link d-inline"
            action="/courses/<%= course._id %>/reviews/<%=review._id%>?_method=DELETE"
            method="POST"
          >
            <button class="btn btn-danger m-2">Remove</button>
          </form>
          <% } %>
        </div>
      </div>
      <% }%>
    </div>
  </div>
</div>
