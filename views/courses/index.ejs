<% layout('./layouts/boilerplate') %>
<!-- <button><a href="/courses/new">Add new Course</a></button> -->
<h1>Main Page</h1>

<% for (let course of courses) {%>

<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img
        src="<%= course.images[0].url%>"
        alt="card-image"
        class="img-fluid"
      />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%=course.title%></h5>
        <p class="card-text"><%=course.description%></p>
        <p class="card-text text-muted"><%=course.location%></p>
        <a href="/courses/<%=course._id%>" class="btn btn-info">View</a>
      </div>
    </div>
  </div>
</div>
<!-- <li><a href="/courses/<%= course._id%>"> <%= course.title %></a></li> -->
<% }%>
